      <ScrollPane fitToWidth="true" layoutX="300.0" layoutY="81.0" prefHeight="304.0" prefWidth="285.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="500.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="81.0">
